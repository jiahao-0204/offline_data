<?xml version="1.0"?>

<launch>
  <!-- arguments -->
  <arg name="rviz_config"     default="$(find offline_data)/rviz/range.rviz"/>

  <!-- launch rviz -->
  <node name="offline_rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_config)"/> 

  <!-- include previous -->
  <include file="$(find offline_data)/launch/node.launch">
    <arg name="file_path"       default="$(find offline_data)/file/exp01-02/slam_pose_graph.g2o"/> 
    <arg name="ds_size"         default="0"/> 
    <arg name="range_threshold" default="50"/> 
    <arg name="range_step"      default="5"/>
  </include>

</launch>
